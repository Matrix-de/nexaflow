{
  "build": {
    "command": "npm run build",
    "cwd": ".",
    "environment": {
      "NODE_VERSION": "18",
      "NODE_ENV": "production"
    }
  },
  "functions": {
    "directory": "functions"
  },
  "assets": {
    "directory": "dist"
  },
  "redirects": [
    {
      "from": "/*",
      "to": "/index.html",
      "status": 200
    }
  ],
  "headers": [
    {
      "source": "*.js",
      "headers": {
        "Cache-Control": "public, max-age=31536000, immutable"
      }
    },
    {
      "source": "*.css", 
      "headers": {
        "Cache-Control": "public, max-age=31536000, immutable"
      }
    },
    {
      "source": "*.woff2",
      "headers": {
        "Cache-Control": "public, max-age=31536000, immutable"
      }
    },
    {
      "source": "*.webp",
      "headers": {
        "Cache-Control": "public, max-age=86400"
      }
    }
  ]
}